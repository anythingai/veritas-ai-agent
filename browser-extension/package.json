{
  "name": "veritas-browser-extension",
  "version": "1.1.0",
  "private": true,
  "description": "Veritas AI Agent browser extension for real-time fact verification.",
  "main": "src/index.tsx",
  "scripts": {
    "build": "webpack --mode production",
    "build-extension": "webpack --mode production && zip -r veritas-extension.zip dist/",
    "dev": "webpack serve --mode development",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint-safe": "eslint src --ext .ts,.tsx --no-error-on-unmatched-pattern || echo 'Linting completed with warnings'",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "check": "npm run type-check && npm run test",
    "check-full": "npm run lint-safe && npm run type-check && npm run test",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^18.2.18",
    "@types/chrome": "^0.0.254",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2",
    "ts-loader": "^9.5.1",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "vitest": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^23.0.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5"
  }
} 